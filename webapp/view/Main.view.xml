<mvc:View displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" controllerName="com.hvl.hr.PersonelBilgileri.controller.Main">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<f:SimpleForm id="simpleFormChange" title="Personel Bilgileri" editable="true" class="editableForm sapUiSmallMarginTopBottom">
						<f:content>
							<!---->
							<Label text="{i18n>layoutFormPernr}" labelFor="pernrInput"/>
							<Input id="pernrInput" type="Text" placeholder="..."/>
							<!---->
							<Label text="{i18n>layoutFormVorna}" labelFor="vornaInput"/>
							<Input id="vornaInput" type="Text" placeholder="..."/>
							<!---->
							<Label text="{i18n>layoutFormNachn}" labelFor="nachnInput"/>
							<Input id="nachnInput" type="Text" placeholder="..."/>
							<!---->
						</f:content>
					</f:SimpleForm>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>layoutListButton}" icon="sap-icon://employee-lookup" type="Accept"/>
						<!--<Button text="{i18n>layoutDraftButton}" icon="sap-icon://save"/>-->
					</Toolbar>
					<List id="idList" items="{/ProductCollection}" selectionChange=".onSelectionChange" mode="MultiSelect" growing="true" growingThreshold="50"
						includeItemInSelection="true">
						<StandardListItem title="{i18n>layoutFormPernr}" description="{ProductId}" icon="{ProductPicUrl}" iconDensityAware="false" iconInset="false"/>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>